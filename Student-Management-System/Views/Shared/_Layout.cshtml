<!DOCTYPE html>
<html>
<head>
    <title>@ViewData["Title"] - Student Management System</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 text-white p-3" style="min-height:100vh; background-color:#003366;">
                <h4>Dashboard</h4>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Student" asp-action="Index">Students</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Teacher" asp-action="Index">Teachers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Course" asp-action="Index">Courses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-white" asp-controller="Department" asp-action="Index">Departments</a>
                    </li>
                  

                </ul>
            </nav>

            <!-- Main content -->
            <main class="col-md-10 p-4">
                @RenderBody()
            </main>
        </div>
    </div>
</body>
</html>
