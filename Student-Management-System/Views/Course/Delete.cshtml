@model Student_Management_System.Models.Course
@{
    ViewData["Title"] = "Delete Course";
}

<h2>Are you sure you want to delete this String?</h2>

<div>
    <h4>@Model.CourseName</h4>
    <h4>@Model.Description</h4>

    <dl class="row">
        <dt class="col-sm-3">Credits</dt>
        <dd class="col-sm-9">@Model.Credits</dd>

        <dt class="col-sm-3">Department ID</dt>
        <dd class="col-sm-9">@Model.DepartmentID</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="CourseID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
