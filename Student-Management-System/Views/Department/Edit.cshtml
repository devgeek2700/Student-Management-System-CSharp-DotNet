@model Student_Management_System.Models.Department
@{
    ViewData["Title"] = "Edit Department";
}

<h2>Edit Department</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="DepartmentID" />

    <div class="form-group">
        <label asp-for="DepartmentName"></label>
        <input asp-for="DepartmentName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="HeadOfDepartment"></label>
        <input asp-for="HeadOfDepartment" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
