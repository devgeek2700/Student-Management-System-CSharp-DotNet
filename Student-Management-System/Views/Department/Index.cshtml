@model List<Student_Management_System.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Departments</h2>
        <a class="btn btn-primary" asp-controller="Department" asp-action="Create">Create New</a>
    </div>

    <!-- 🔍 Search Bar -->
    <form asp-controller="Department" asp-action="Search" method="get" class="mb-4">
        <div class="input-group">
            <input type="text" name="query" class="form-control" placeholder="Search by name, HOD, course, teacher..." required />
            <button class="btn btn-outline-secondary" type="submit">Search</button>
        </div>
    </form>


    <!-- 📚 Courses Table -->
    <table class="table table-bordered table-striped">
        <thead class="table-light">
            <tr>
                <th>Department ID</th>
                <th>Department Name</th>
                <th>Head Of Department</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var department in Model)
                {
                    <tr>
                        <td>@department.DepartmentID</td>
                        <td>@department.DepartmentName</td>
                        <td>@department.HeadOfDepartment</td>
                        <td>
                            <a class="btn btn-sm btn-warning" asp-controller="Department" asp-action="Edit" asp-route-id="@department.DepartmentID">Edit</a>
                            <a class="btn btn-sm btn-danger" asp-controller="Department" asp-action="Delete" asp-route-id="@department.DepartmentID">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">No Department found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
