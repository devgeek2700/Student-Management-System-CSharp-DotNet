@model Student_Management_System.Models.Department
@{
    ViewData["Title"] = "Create Department";
}

<h2>Create New Department</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="DepartmentName"></label>
        <input asp-for="DepartmentName" class="form-control" />
    </div>


    <div class="form-group">
        <label asp-for="HeadOfDepartment"></label>
        <input asp-for="HeadOfDepartment" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
