@model Student_Management_System.Models.StudentViewModel
@using Student_Management_System.Models.Enums


@{
    ViewData["Title"] = "Edit Student";
}

<h2>Edit Student</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Student.StudentID" />

    <div class="form-group">
        <label asp-for="Student.FirstName"></label>
        <input asp-for="Student.FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Student.LastName"></label>
        <input asp-for="Student.LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Student.Email"></label>
        <input asp-for="Student.Email" class="form-control" />
    </div>
   

    
    <div class="form-group">
        <label asp-for="Student.Gender" class="control-label"></label>
        <select asp-for="Student.Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()">
            <option value="">-- Select Gender --</option>
        </select>
        <span asp-validation-for="Student.Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Student.DOB"></label>
        <input asp-for="Student.DOB" class="form-control"
               type="date"
               min="1980-01-01"
               max="9999-12-31"
               value="@Model.Student.DOB.ToString("yyyy-MM-dd")"
               required />
    </div>

   

    <div class="form-group">
        <label asp-for="Student.Phone"></label>
        <input asp-for="Student.Phone" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Student.Address"></label>
        <input asp-for="Student.Address" class="form-control" />
    </div>

    <div class="form-group">
        <label>Department</label>
    <select asp-for="Student.DepartmentID"
            asp-items="@(new SelectList(Model.AllDepartments, "DepartmentID", "DepartmentName"))"
            class="form-control">
        <option value="">-- Select Department --</option>
    </select>
    </div>


    <div class="form-group">
        <label>Courses</label>
        <select asp-for="SelectedCourseIds"
                asp-items="@(new MultiSelectList(Model.AllCourses, "CourseID", "CourseName", Model.SelectedCourseIds))"
                class="form-control" multiple>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Student.EnrollmentDate"></label>
        <input asp-for="Student.EnrollmentDate" class="form-control"
               type="date"
               min="1980-01-01"
               max="9999-12-31"
               value="@Model.Student.EnrollmentDate.ToString("yyyy-MM-dd")"
               required />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
