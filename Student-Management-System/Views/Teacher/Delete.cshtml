@model Student_Management_System.Models.Teacher

@{
    ViewData["Title"] = "Delete Teacher";
}

<h2 class="mt-4">Are you sure you want to delete this teacher?</h2>

<div class="mt-3">
    <h4>@Model.FirstName @Model.LastName</h4>
    <dl class="row">
        <dt class="col-sm-3">Email</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">Phone</dt>
        <dd class="col-sm-9">@Model.Phone</dd>

        <dt class="col-sm-3">Subject</dt>
        <dd class="col-sm-9">@Model.SubjectTeacher</dd>

        <dt class="col-sm-3">Qualification</dt>
        <dd class="col-sm-9">@Model.Qualification</dd>

        <dt class="col-sm-3">DepartmentID</dt>
        <dd class="col-sm-9">@Model.DepartmentID</dd>


        <dt class="col-sm-3">Hire Date</dt>
        <dd class="col-sm-9">@Model.HireDate?.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post" class="mt-4">
    <input type="hidden" asp-for="TeacherID" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>
