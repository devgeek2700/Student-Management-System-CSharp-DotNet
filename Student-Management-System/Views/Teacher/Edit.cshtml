@model Student_Management_System.Models.TeacherViewModel

@{
    ViewData["Title"] = "Edit Teacher";
}

<h2>Edit Teacher</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Teacher.TeacherID" />

    <div class="form-group">
        <label asp-for="Teacher.FirstName"></label>
        <input asp-for="Teacher.FirstName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Teacher.LastName"></label>
        <input asp-for="Teacher.LastName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Teacher.Email"></label>
        <input asp-for="Teacher.Email" class="form-control" type="email" />
    </div>

    <div class="form-group">
        <label asp-for="Teacher.Gender"></label>
        <select asp-for="Teacher.Gender" class="form-control">
            <option>Male</option>
            <option>Female</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Teacher.Phone"></label>
        <input asp-for="Teacher.Phone" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Teacher.Address"></label>
        <input asp-for="Teacher.Address" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Teacher.HireDate"></label>
        <input asp-for="Teacher.HireDate" class="form-control" type="date"
               value='@Model.Teacher.HireDate?.ToString("yyyy-MM-dd")' />
    </div>

    <div class="form-group">
        <label asp-for="Teacher.Qualification"></label>
        <input asp-for="Teacher.Qualification" class="form-control" />
    </div>

    <div class="form-group">
        <label>Department</label>
        <select asp-for="Teacher.DepartmentID"
                asp-items="@(new SelectList(Model.AllDepartments, "DepartmentID", "DepartmentName", Model.Teacher.DepartmentID))"
                class="form-control">
            <option value="">-- Select Department --</option>
        </select>
    </div>

    <div class="form-group">
        <label>Courses</label>
        <select asp-for="SelectedCourseIds"
                asp-items="@(new MultiSelectList(Model.AllCourses, "CourseID", "CourseName", Model.SelectedCourseIds))"
                class="form-control" multiple>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
