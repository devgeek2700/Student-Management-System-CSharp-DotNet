@model Student_Management_System.Models.TeacherViewModel
@using Student_Management_System.Models.Enums


@{
    ViewData["Title"] = "Create Teacher";
}

<h2>Create New Teacher</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Teacher.FirstName"></label>
        <input asp-for="Teacher.FirstName" class="form-control" />
        <span asp-validation-for="Teacher.FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Teacher.LastName"></label>
        <input asp-for="Teacher.LastName" class="form-control" />
        <span asp-validation-for="Teacher.LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Teacher.Email"></label>
        <input asp-for="Teacher.Email" class="form-control" type="email" />
        <span asp-validation-for="Teacher.Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Teacher.Gender" class="control-label"></label>
        <select asp-for="Teacher.Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()">
            <option value="">-- Select Gender --</option>
        </select>
        <span asp-validation-for="Teacher.Gender" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Teacher.Phone"></label>
        <input asp-for="Teacher.Phone" class="form-control" />
        <span asp-validation-for="Teacher.Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Teacher.Address"></label>
        <input asp-for="Teacher.Address" class="form-control" />
        <span asp-validation-for="Teacher.Address" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Teacher.HireDate"></label>
        <input asp-for="Teacher.HireDate" class="form-control" type="date" />
        <span asp-validation-for="Teacher.HireDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Teacher.Qualification"></label>
        <input asp-for="Teacher.Qualification" class="form-control" />
        <span asp-validation-for="Teacher.Qualification" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label>Department</label>
        <select asp-for="Teacher.DepartmentID"
                asp-items="@(new SelectList(Model.AllDepartments, "DepartmentID", "DepartmentName"))"
                class="form-control">
            <option value="">-- Select Department --</option>
        </select>
        <span asp-validation-for="Teacher.DepartmentID" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Courses</label>
        <select asp-for="SelectedCourseIds"
                asp-items="@(new MultiSelectList(Model.AllCourses, "CourseID", "CourseName"))"
                class="form-control" multiple>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
